<%- include("header") -%>

<container>
    <div style="background-color: white; padding-top: 0rem;" class="jumbotron jumbotron-fluid d-flex justify-content-center">
        <div class="container-fluid">
            <div mt-0>
                <img src="banner.jpg" alt="Banner Image" style="max-width: 100%;">
            </div>
            <div class="bottom-left">
                <h3 style="text-align: center; color: #00416d;"> To Authorize Medical Record Search <br><span
                        style="color: whitesmoke;">Fill Form Below</span> </h3>
            </div>
            <div class="top-left">
                <h2>Let Us Start Your HealthCare<br> With The Best Available Information</h2>
            </div>
            <div class="top-right"></div>
            <div class="bottom-right"></div>
            <div class="centered"></div>
        </div>   
    </div>
    <div class="form" style="background-color: #00416d; color:whitesmoke">
        <div class="col">
            <form action="/" method="POST">
                <div class="form-row align-items-center">
                    <div class="form-group col-md-4">
                        <label for="FName" >First Name</label>
                        <input type="text" class="form-control" id="FName" name="FName">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="LName">Last Name</label>
                        <input type="text" class="form-control" id="LName" name="LName">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="DOB">Date of Birth</label>
                        <input type="Date" class="form-control" id="DOB" name="DOB">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" id="Address1" placeholder="1234 Main St" name="Address1">
                </div>
                <div class="form-group">
                    <label for="inputAddress2">Address 2</label>
                    <input type="text" class="form-control" id="Address2" placeholder="Apartment, studio, or floor" name="Address2">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCity">City</label>
                        <input type="text" class="form-control" id="city" name="city">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputState">State</label>
                        <select id="state" class="form-control" name="state">
                            <option selected>Choose...</option>
                            <option value="1">...</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputZip">zip</label>
                        <input type="text" class="form-control" id="inputZip" name="zip">
                    </div>
                </div>
                <div class="form-check"> 
                    <input class="form-check-input" type="checkbox" id="gridCheck" name="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                    <button type="submit" class="btn btn-primary btn-lg">SEND</button>
                </div>    
            </form>
        </div>        
    </div>        
</container>
 